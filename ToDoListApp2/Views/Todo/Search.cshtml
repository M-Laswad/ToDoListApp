@model List<Todo>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search Results</title>
    <style>
        body {
            padding: 20px;
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        h2 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .link {
            color: #007bff;
            text-decoration: none;
        }

            .link:hover {
                text-decoration: underline;
            }

        .table {
            margin-top: 20px;
            background-color: #fff;
            border-radius: 5px;
            padding: 20px;
        }

        th {
            color: #fff;
            background-color: #007bff;
            padding: 10px;
            text-align: left;
        }

        td {
            padding: 10px;
        }

        .yes {
            color: #28a745;
            font-weight: bold;
        }

        .no {
            color: #dc3545;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Search Results</h2>

        <p>
            <a asp-action="Index" class="link">Back to Todo List</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].IsDone)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>
                            @if (item.IsDone)
                            {
                                <span class="yes">YES</span>
                            }
                            else
                            {
                                <span class="no">NO</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="link">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="link">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="link">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>